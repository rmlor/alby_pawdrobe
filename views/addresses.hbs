<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
{{!-- Create a table --}}
<table id="addresses-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes in order--}}
        {{#each data}}
        <tr data-value={{this.addressID}}>
            <td>{{this.addressID}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.streetAddress}}</td>
            <td>{{this.unit}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.postalCode}}</td>
            <td><button onclick="deleteAddress({{this.addressID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a new address</h2>
<p>To add a new address, please enter their information below and click 'Submit'!</p>
<form id="add-address-form-ajax">
    <label for="input-customerID">CustomerID: </label>
    <select name="input-customerID" id="input-customerID">
        <option value="">Select a Customer</option>
        {{#each customers}}
        <option value="{{this.customerID}}">{{this.customerName}}</option>
        {{/each}}
    </select>
    
    <label for="input-streetAddress">Street Address: </label>
    <input type="text" name="input-Street Address" id="input-streetAddress">

    <label for="input-unit">Unit: </label>
    <input type="text" name="input-unit" id="input-unit">

    <label for="input-city">City: </label>
    <input type="text" name="input-city" id="input-city">

    <label for="input-state">State: </label>
    <input type="text" name="input-state" id="input-state">

    <label for="input-postalCode">Postal Code: </label>
    <input type="number" name="input-postalCode" id="input-postalCode">

    <input type="submit">
</form>

<h2>Update A Customer's Address</h2>
<p>To update an address, select it from the drop-down menu on the left and update the fields</p>
<form id="update-address-form-ajax">

    <label for="input-addressID-update">Address: </label>
    <select name="input-addressID-update" id="selectAddress">
        <option value="test">Select an Address</option>
        {{#each data}}
        <option value="{{this.addressID}}">{{this.streetAddress}}, {{this.unit}}, {{this.city}}, {{this.state}}  {{this.postalCode}}</option>
        {{/each}}
    </select>

    <label for="input-streetAddress-update">Street Address: </label>
    <input type="text" name="input-streetAddress-update" id="input-streetAddress-update">

    <label for="input-unit-update">Unit: </label>
    <input type="text" name="input-unit-update" id="input-unit-update">

    <label for="input-city-update">City: </label>
    <input type="text" name="input-city-update" id="input-city-update">

    <label for="input-state-update">State: </label>
    <input type="text" name="input-state-update" id="input-state-update">

    <label for="input-postalCode-update">Postal Code: </label>
    <input type="number" name="input-postalCode-update" id="input-postalCode-update">

    <input type="submit">
</form>

